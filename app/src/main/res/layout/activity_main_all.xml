<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.mahendran.androidbasic.MainAllActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="button"
                android:textSize="15dp"
                android:text="MyButtonClick1"
                android:id="@+id/btnbutton"
                android:background="#f5e104"
                android:layout_width="140dp"
                android:layout_margin="2dp"
                android:layout_gravity="left"
                android:layout_height="wrap_content" />
            <Button
                android:onClick="button1"
                android:textSize="15dp"
                android:text="MyButtonClick2"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:background="#30f504"
                android:layout_width="140dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="button2"
                android:text="MyButtonClick3"
                android:background="#f40808"
                android:layout_margin="2dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="lifecycle"
                android:text="ActivityLifecycle"
                android:layout_width="140dp"
                android:background="#0866f4"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />
            <Button
                android:onClick="explicitIntent"
                android:text="ExplicitIntent"
                android:background="#04f7e3"
                android:layout_width="140dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:text="IntentExample"
                android:onClick="Intent"
                android:background="#f7eb04"
                android:layout_width="140dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />
            <Button
                android:text="FrameLayout"
                android:onClick="Frame"
                android:background="#2b6e30"
                android:layout_width="140dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:onClick="Check"
                android:text="CheckBox"
                android:background="#f40808"
                android:layout_margin="2dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:text="ToogleButton"
                android:onClick="Button"
                android:background="#f704f7"
                android:layout_width="140dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />
            <Button
                android:text="MyListView"
                android:onClick="list"
                android:background="#8c8231"
                android:layout_width="140dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:text="xml parsing"
            android:onClick="parsingemp"
            android:background="#8c8231"
            android:layout_width="160dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
